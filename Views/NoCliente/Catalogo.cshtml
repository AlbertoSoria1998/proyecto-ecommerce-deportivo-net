<script>
  var TrandingSlider = new Swiper('.tranding-slider', {
    effect: 'coverflow',
    grabCursor: true,
    centeredSlides: true,
    loop: true,
    slidesPerView: 'auto',
    coverflowEffect: {
      rotate: 0,
      stretch: 0,
      depth: 100,
      modifier: 2.5,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    autoplay: {
      delay: 1000, // tiempo de retardo en milisegundos, es decir, 3 segundos
      disableOnInteraction: false, // esto permitirá que el autoplay continúe después de que el usuario interactúe con el slider
    }
  });


  /* para el boton de buscar */

</script>
